{
  "version": 2,
  "buildCommand": "bash vercel-build.sh",
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "backend/api/index.py"
    },
    {
      "src": "/api/analyze-position",
      "dest": "backend/api/index.py"
    },
    {
      "src": "/api/analyze-game",
      "dest": "backend/api/index.py"
    },
    {
      "src": "/api/classify-move",
      "dest": "backend/api/index.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "backend/api/index.py": {
      "maxDuration": 60
    }
  }
}
